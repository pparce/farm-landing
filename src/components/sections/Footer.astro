---
import { blogs } from "../../data/blog";
const menu = [
    {
        name: "Home",
        link: "/",
    },
    {
        name: "Nosotros",
        link: "/#about",
    },
    {
        name: "Servicios",
        link: "/#services",
    },
    {
        name: "Equipo",
        link: "/#team",
    },
    {
        name: "Noticias",
        link: "/#news",
    },
    {
        name: "Contacto",
        link: "/#contact",
    },
];
---

<!-- footer area -->
<div class="witrfm_area">
    <div class="footer-middle">
        <div class="container">
            <div class="row">
                <div
                    class="sheepfarm_theme_widget sheepfarm_f_color col-sm-12 col-md-6 col-lg-3"
                >
                    <div class="widget widget_nav_menu">
                        <h2 class="widget-title">Enlaces Rápidos</h2>
                        <div class="menu-customer-container">
                            <ul class="menu">
                                {
                                    menu.map((item) => (
                                        <li>
                                            <a href={item.link}>{item.name}</a>
                                        </li>
                                    ))
                                }
                            </ul>
                        </div>
                    </div>
                </div>
                <div
                    class="sheepfarm_theme_widget sheepfarm_f_color col-sm-12 col-md-6 col-lg-5"
                >
                    <div class="tts">
                        <div class="ttin text-center">
                            <div class="ttit flex justify-center">
                                <img
                                    src="/logo.png"
                                    alt="image"
                                    class="h-20!"
                                />
                            </div>
                            <p>
                                Nos dedicamos a impulsar el desarrollo rural a
                                través de la innovación tecnológica.
                                Comprometidos con la sustentabilidad y la
                                eficiencia en cada proyecto.
                            </p>
                        </div>
                    </div>
                    <div class="witr_siconw">
                        <ul>
                            <li>
                                <a class="txbdbhcolor" href="#">
                                    <i class="flaticon flaticon-facebook-4"></i>
                                </a>
                                <a class="txbdbhcolor" href="#">
                                    <i class="flaticon icofont-instagram"></i>
                                </a>
                            </li>
                        </ul>
                    </div>
                    <div class="tts">
                        <div class="ttin text-center">
                            <a class="txbdstitle hlight txbdbcolor cursor-pointer" href="tel:+5492284547859">
                                Contáctanos:
                                <span class="text-white">+54 9 2284 54-7859</span
                                >
                            </a>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6">
                    <div class="single-widget-item">
                        <h2 class="heading-title">Últimas Publicaciones</h2>
                        {
                            blogs.slice(0, 2).map((blog) => (
                                <div class="recent-post-item">
                                    <div class="recent-post-image">
                                        <a href="#">
                                            <img
                                                class="aspect-square h-12! rounded-lg"
                                                src={blog.image}
                                                alt={blog.title}
                                            />
                                        </a>
                                    </div>
                                    <div class="recent-post-text">
                                        <h4>
                                            <a href="#"> {blog.title} </a>
                                        </h4>
                                        <span class="rcomment">
                                            {blog.date}
                                        </span>
                                    </div>
                                </div>
                            ))
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- END FOOTER MIDDLE AREA -->
    <div class="footer-bottom">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12">
                    <div class="tts">
                        <div class="ttin text-center">
                            <p>
                                Derechos de Autor © AgroIT 2026 .
                                Todos los derechos reservados.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
