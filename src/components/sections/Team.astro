---
import { team } from "../../data/team";
---

<div id="team" class="sm_team_area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="tts">
                    <div class="ttin text-center">
                        <div class="ttit flex justify-center items-center">
                            <img src="/content/Sm_title_shap.png" alt="image" />
                        </div>
                        <h2 class="txbdstitle hlight">
                            Nuestro Equipo de Expertos
                        </h2>
                        <p>
                            Contamos con profesionales altamente capacitados en
                            energías renovables e inteligencia artificial para
                            brindarte el mejor asesoramiento y servicio técnico.
                        </p>
                    </div>
                </div>
            </div>
            <div
                class="swiper team_swiper_active"
            >
                <div
                    class="swiper-wrapper w-full"
                    id="swiper-wrapper-team"
                    aria-live="off"
                >
                    {
                        team.map((member) => (
                            <div class="swiper-slide">
                                <div class="tteam11 alltmcst">
                                    <div class="tteamimg boxtextposire txbdboxallhover">
                                        <img src={member.image} alt="image" />
                                        <div class="tteamcon text-center tteamp11 boxtextposi boxtextposbl alltmcstc">
                                            <div class="team_title">
                                                <h2 class="teamtit">
                                                    {member.name}
                                                </h2>
                                                <span>{member.role}</span>
                                            </div>
                                            <div class="tteamsocial ticonp11">
                                                {member.social.map((social) => (
                                                    <a href={social.link}>
                                                        <i
                                                            class={social.icon}
                                                        />
                                                    </a>
                                                ))}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        ))
                    }
                </div>
                <!-- <div class="swiper-pagination"></div>
                <div class="swiper-button-next"></div>
                <div class="swiper-button-prev"></div> -->
            </div>
        </div>
    </div>
</div>
