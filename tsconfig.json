{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
        "@components/*": ["src/components/*"],
        "@sections/*": ["src/components/sections/*"],
        "@layouts/*": ["src/layouts/*"],
        "@styles/*": ["src/styles/*"],
    }
  }
}
